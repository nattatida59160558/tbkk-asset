@page
@model tbkk_AC.Pages.Departments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">Asset Control</a>
            </li>
            <li class="breadcrumb-item active">Managment</li>
            <li class="breadcrumb-item active">Brand</li>
        </ol>
        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <div class="dataTable_length">
                    <i class="fas fa-table"> Brand</i>
                    <div style="float: right">
                        <button type="button" class="btn btn-primary depts-modal" data-toggle="modal" data-target="#createDeptsModal">
                            Create
                        </button>
                        <!--<a class="btn btn-info" asp-page="Create">Create New</a>-->
                        <button type="button" class="btn btn-info">Import data</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Department[0].DepartmentID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Department[0].DepartmentName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Department[0].Image)
                                </th>
                                <th>
                                    Edit
                                </th>
                                <th>
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Department)
                            {
                                <tr>
                                    <td class="depts-modal" data-toggle="modal" data-id="@item.DepartmentID" data-target="#detailDeptsModal">
                                        @Html.DisplayFor(modelItem => item.DepartmentID)
                                    </td>
                                    <td class="depts-modal" data-toggle="modal" data-id="@item.DepartmentID" data-target="#detailDeptsModal">
                                        @Html.DisplayFor(modelItem => item.DepartmentName)
                                    </td>
                                    <td class="depts-modal" data-toggle="modal" data-id="@item.DepartmentID" data-target="#detailDeptsModal">
                                        @Html.DisplayFor(modelItem => item.Image)
                                    </td>
                                    <td width="5%">
                                        <button type="button" class="btn btn-secondary btn-block depts-modal" data-toggle="modal" data-target="#editDeptsModal" data-id="@item.DepartmentID">Edit</button>
                                    </td>
                                    <td width="5%">
                                        <button type="button" class="btn btn-secondary depts-modal" data-toggle="modal" data-target="#deleteDeptsModal" data-id="@item.DepartmentID">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

    <footer class="sticky-footer">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright © Your Website 2019</span>
            </div>
        </div>
    </footer>
</div>

<!--modal create-->
<div class="modal fade" id="createDeptsModal" tabindex="-1" role="dialog" aria-labelledby="createDeptsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createDeptsModalLabel">Create</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="modal-create">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Dept Name</label>
                        <input type="text" class="form-control" id="createDeptName" placeholder="Enter Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Example Image input</label>
                        <input type="file" class="form-control-file" id="createDeptimage">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="createSave">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--end modal create-->
<!--modal edit-->
<div class="modal fade" id="editDeptsModal" tabindex="-1" role="dialog" aria-labelledby="editDeptsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editDeptsModalLabel">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="modal-edit">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Dept ID</label>
                        <input readonly type="text" class="form-control txtDeptID" id="txtDeptID">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Dept Name</label>
                        <input type="text" class="form-control" id="txtDeptName" placeholder="Enter Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Example Image input</label>
                        <input type="file" class="form-control-file" id="txtDeptImage">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="deptsSave">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--end modal edit-->
<!--modal detail-->
<div class="modal fade" id="detailDeptsModal" tabindex="-1" role="dialog" aria-labelledby="detailDeptsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailDeptsModalLabel">details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="model-details">
                <div class="modal-body">
                    <div class="row ">
                        <div class="col-7">
                            <label for="assetIdLabel">Dept ID</label>
                            <p class=" txtDeptID" id="deptid"></p>
                            <br>
                            <label for="deptNameLabel">Dept Name</label>
                            <p id="txtDeptname"></p>
                        </div>
                        <div class="col-3">
                            <label for="deptImgLabel">Example Image</label>
                            <img src="~/images/alpacca2.jpg style="width: 200px; height: 200px;" id="txtDeptimage">
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--end modal detail-->
<!--modal del-->
<div class="modal fade" id="deleteDeptsModal" tabindex="-1" role="dialog" aria-labelledby="deleteDeptsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteDeptsModalLabel">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ต้องการจะลบข้อมูลไหม
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="deptsDelete">Save</button>
            </div>
        </div>
    </div>
</div>
<!--end modal del-->

@section Scripts {
    <script>

        $(document).on("click", ".depts-modal", function () {
            let id = $(this).data('id');
            $.get('/api/Departments/' + id, {}, (response) => {
                $(".modal-body #txtDeptID").val(id);
                $(".modal-body #txtDeptName").val(response.departmentName);
                $(".modal-body #txtDeptImage").val(response.image);
                $("#deptid").text(id);
                $("deptname").text(response.departmentName);
                $("#deptimage").text(response.image);
            });
        });


        $(document).on("submit", "#createDeptsModal #modal-create", function (e) {
            e.preventDefault();
            var data = {
                DepartmentName: $(".modal-body #createDeptName").val(),
                Image: $(".modal-body #createDeptimage").val(),
            };

            $.ajax({
                type: 'POST',
                url: '/api/Departments',
                contentType: 'application/json',
                data: JSON.stringify(data), // access in body
            }).done(function () {
                console.log('SUCCESS');
                location.reload();
            }).fail(function (msg) {
                console.log(data)
                console.log(msg);
                alert('FAIL');
            });

        });//create

        $(document).on("submit", "#detailDeptsModal #model-details", function (e) {
            e.preventDefault();

            var id = $(".modal-body #txtDeptID").val();
            var data = {
                DepartmentID: id,
